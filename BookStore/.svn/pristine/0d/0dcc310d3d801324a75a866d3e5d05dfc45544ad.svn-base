@CHARSET "UTF-8";
/*先把用到的所有控件内边距外边距全部设置为0px*/
html,body,div,ul,li,a,img,i{
	margin:0px;
	padding:0px;}
/*头部区域样式*/
.head{
	width:100%;
	height:190px;
	}
                                                                                /*头部链接区域样式*/
.head .h_top{
    height:30px;
    background:#383838;}
.h_top ul li{
	list-style:none;
	float:left;
	line-height:30px;}
.h_top ul li a{
	font-size:12px;
	font-family:"微软雅黑";
	color:#9e9c9c;
	text-decoration:none;/*消除文本下划线*/
	transition:all/*所有*/ 0.4s/*过渡时间*/;/*Css3新定义过度属性*/}
.h_top ul li a:hover{
	color:#fff;}
	                                                                            /* logo*/
.h_center{
	background:#f7f7f7;
    height:80px;}
	}
.h_center.logol{
	text-align: center;
}
.information{
	height:40px;
	width: 104px;
	text-align: center;
	padding-top: 9px;
	border-radius:8px;
	transition:all 0.6s;
	background: #01B1F3;
	color: white;
	
}
.information:hover{
	border-radius:4px;
	background:#00CCCC;
	box-shadow:0px 0px 3px #999;
}
ul.t_nav{
	float:left;
	margin-left:50px;}
ul.t_nav li a{
	border-left:1px solid #535353;
	padding:0 20px;}
ul.t_user{
	float:right;
	margin-right:70px;}
ul.t_user li a{padding:0 20px;}
                                                                                     /*网站导航区域样式*/
.head .h_nav{
	width:91%;
	height:80px;
	margin:0 auto;
	box-shadow:0px 1px 0px #DCE1E7;
	background: white;}
ul.n_nav{
	width:100%;
	height:80px;
	display:inline-block;
	margin-left:12px;
	}
ul.n_nav li{
	float:left;
	list-style:none;
	}
ul.n_nav li a{
	color:#434649;
	font-size:20px;
	padding:0 40px;
	line-height:38px;
    text-decoration:none;font-family:"微软雅黑";
    transition:all 0.4s;}
ul.n_nav li a:hover{color:#f45555;}
		                                                                                            /*搜索小图标*/
.text_but{
	transition:all 0.6s;
	font-size: 20px;
	width: 300px;
	height:40px;
    border-radius:5px;/*cSS3 边框圆角*/
}   
.text_but:hover{
	border-radius:4px;
	background:blanchedalmond;
}
.main{width:90%;height:388px;background:#000;
    margin:10px auto;
	 position:relative;}
	 .main .m_piclist{width:100%;height:389px;
	 position:relative;/*相对定位*/}
	 .main .m_piclist ul li{list-style:none;/*去掉小黑圆点*/
	 width:1220px;height:389px;
	 position:absolute;/*绝对定位*/
	 left:0;
	 top:0;
	 opacity:0;}
	 .main .m_nav{width:150px;height:20px;
	 position:absolute;/*绝对定位*/
	 bottom:3px;
	 margin-left:-60px;
	 left:50%;}
	 /*设置图片原型按钮特效*/
	 .main .m_nav span{
	     width:20px;
		 height:20px;
		 background:#3e3e3e;
		 border-radius:50%;/*将背景小正方形变成小圆点*/
		 color:#fff;/*字体颜色*/
		 font-size:14px;/*字体大小*/
		 display:block;/*将行内元素变为块元素*/
		 float:left;/*左浮动*/
		 margin-right:5px;
		 text-align:center;/*文本居中*/
		 line-height:20px;/*行高*/
	 }
	 .main.m_nav.active{
	     background:red;
		 }
	 .m_nav span a{
	     color:#fff;
		 text-decoration:none;/*下划线*/
	 }
	 .m_nav span a:hover{
	     color:red;
		 text-decoration:none;/*下划线*/
	 }
	 .main .btn a{
	     width:45px;
		 height:60px;
		 background:rgba(0,0,0,0.2);
		 display:block;
		 text-decoration:none;
		 color:#fff;
		 text-align:center;
		 line-height:60px;
		 font-size:30px;
		 position:absolute;
		 top:50%;
		 margin-top:-30px;		 
	 }
	 a.prev{left:0px;}
	 a.next{right:0px;}

